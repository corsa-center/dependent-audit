{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Universal Dependency Graph",
  "type": "object",
  "required": ["meta", "nodes", "edges"],
  "properties": {
    "nodes": {
      "items": {
        "properties": {
          "data": {
            "properties": {
              "stars": {"type": "integer"},
              "contributors": {"type": "integer"},
              "commits": {"type": "integer"},
              "lastUpdate": {"type": "string"},
              "latestRelease": {"type": "string"},
              "license": {"type": "string"},
              "isFork": {"type": "boolean"},
              "paper": {
                "type": ["object", "null"],
                "properties": {
                  "title": {"type": "string"},
                  "doi": {"type": "string"},
                  "journal": {"type": "string"},
                  "url": {"type": "string"}
                }
              }
            }
          }
        }
      }
    }
  }
}
